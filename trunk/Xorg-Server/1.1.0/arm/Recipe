configure_options=(
    "--with-int10=x86emu"
	"--enable-malloc0returnsnull=no"
	"--disable-builddocs"
	"--disable-dri"
	"--disable-xnest"
	"--disable-xwin"
	"--disable-dmx"
#   "--enable-composite"
)

pre_build() {
    Quiet pushd $dir/miext/damage
    [ ! -a cw.h ] && ln -s ../cw/cw.h .
    Quiet popd
    GrepReplace "LIBS = @LIBS@" "LIBS = @LIBS@ -lcw" $dir/hw/xnest/Makefile.in

	if [ ! -f .bootstrapped ]
	then
		echo "Running autoconf..." && autoconf && touch .bootstrapped
	fi
}

pre_link() {
    mkdir -p $target/Resources/Defaults/Settings/X11
    cp $archsubdir/xorg.conf.default $target/Resources/Defaults/Settings/X11/xorg.conf
}
